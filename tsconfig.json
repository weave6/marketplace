{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "./scripts",
    "./tests",
    "./typechain-types",
    "artifacts/*.json"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "exclude": [
    "./build",
    "node_modules"
  ]
}